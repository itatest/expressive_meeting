<!DOCTYPE html>
<html>
<head>
  <title>ExpressiveMeeting</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
	<div class="navbar navbar-default navbar-fixed-top">
		<div class="container">
			<div class="navbar-header">
				<a class="navbar-brand">Expression Meeting</a>
			</div>
			<ul class="nav navbar-nav">
				<% if logged_in? %>
				<li>
					<%= link_to "Meetings", meetings_path %>
				</li>
				<li><a>YYY</a></li>
				<% end %>
			</ul>
			<ul class="nav navbar-nav navbar-right">
				<% if logged_in? %>
				<li>
					<%= button_to "Sign out", signout_path, method: :delete, class: 'btn btn-default btn-mini navbar-btn'  %>
				</li>
				<% end %>
			</ul>
		</div>
	</div>

		<div class="container">
		  <%= bootswatch_flash %>
		  <%= yield %>
		  
		  <footer>
				<p>
					&copy; 2015 Ogis-ri ITA Member.
				</p>
			</footer>
		</div>
		<!-- /container -->
</body>
</html>
