<div class="content">
	<div class="panel panel-default hdr-spacer">
		<div class="panel-heading">
			<h3 class="panel-title">Sign In</h3>
		</div>
		<div class="panel-body">
			<%= form_tag(signin_path, method: :post, id: "signin", role: "form") do %>
			<div class="form-group">
				<label class="control-label" for="login_key">
					Your Email Address
				</label>
				<%= text_field_tag "signin[email]", @login_key, class: "form-control", id: "login_key" %>
			</div>
			<div class="form-group">
				<label class="control-label" for="user_password">Password</label>
				<%= password_field_tag "signin[password]", nil, class: "form-control", id: "user_password" %>
			</div>
			<div class="checkbox">
				<label for="user_remember_me">
					<%= hidden_field_tag "signin[remember_me]", "0" %>
					<%= check_box_tag "signin[remember_me]", "1", false, id: "user_remember_me" %>
					Remember me
				</label>
			</div>
			<%= submit_tag "Sign in", class: 'btn btn-primary' %>
			<% end %>
		</div>
	</div>
</div>