<div class="content">
	<div class="panel panel-default hdr-spacer">
		<div class="panel-heading">
			<h3 class="panel-title">New Meeting</h3>
		</div>
		<div class="panel-body">
			<%= bootstrap_form_for(@meeting) do |f| %>
			<div class="row">
				<div class="col-md-12">
					<%= f.text_field :name %>
					<%= f.text_field :description %>
				</div>
			</div>
			<div class="row">
				<div class="col-md-12">
					<%= f.submit class: 'btn btn-success' %>
				</div>
			</div>
			<% end %>
		</div>
	</div>
</div>
