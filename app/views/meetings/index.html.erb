<div class="content">
	<div class="panel panel-default hdr-spacer">
		<div class="panel-heading">
			<h3 class="panel-title">Groups</h3>
		</div>
		<div class="panel-body">
			<div class="hdr-bottom-spacer pull-right">
				<%= button_to "New Meeting", new_meeting_path, method: :get, class: 'btn btn-primary'  %>
			</div>
			<div class="row">
				<div class="col-md-12">
					<table class="table table-condensed table-hover table-striped dataTable">
						<thead>
							<tr>
								<th>ID</th>
								<th>Name</th>
								<th>Description</th>
								<th>Status</th>
							</tr>
						</thead>
						<tbody>
							<% @meetings.each do |meeting| %>
							<tr>
								<td><%= link_to meeting.id, meeting_path(meeting.id, data: { no_turbolink: true } ) %></td>
								<td><%= meeting.name %></td>
								<td><%= meeting.description %></td>
								<td><%= meeting.status %></td>
							</tr>
							<% end %>
						</tbody>
					</table>
				</div>
			</div>
		</div>
	</div>
</div>
